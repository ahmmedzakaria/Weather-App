<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp">
<LinearLayout
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_gradient_row_layout"
    android:layout_weight="1.5"
    android:padding="@dimen/midiumPadding">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hourlyForecastDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:padding="@dimen/verySmallPadding"
            android:text="Sat"
            android:textColor="@color/rowLayout"
            android:textSize="@dimen/smallHourlyRowLayoutText" />
        <TextView
            android:id="@+id/hourlyForecastTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="left"
            android:padding="@dimen/verySmallPadding"
            android:text="8:00"
            android:textColor="@color/rowLayout"
            android:textSize="@dimen/smallHourlyRowLayoutText" />
    </LinearLayout>
    <TextView
        android:id="@+id/hourlyWeatherState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/verySmallPadding"
        android:text="Mostly cloudy"
        android:textColor="@color/rowLayout"
        android:textSize="@dimen/smallHourlyRowLayoutText" />
    <TextView
        android:id="@+id/hourlyForecastHumidity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/verySmallPadding"
        android:text="Humidity: 73%"
        android:textColor="@color/rowLayout"
        android:textSize="@dimen/smallHourlyRowLayoutText" />
    <TextView
        android:id="@+id/hourlyForecastWind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:padding="@dimen/verySmallPadding"
        android:text="Wind: 7 Km/h"
        android:textColor="@color/rowLayout"
        android:textSize="@dimen/smallHourlyRowLayoutText" />
</LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background_gradient_row_layout"
        android:layout_weight="1"
        android:padding="@dimen/midiumPadding">

        <ImageView
            android:id="@+id/hourlyWeatherImage"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:padding="@dimen/verySmallPadding"
            android:src="@drawable/icon30" />
        <TextView
            android:id="@+id/hourlyForecastTemperatur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/verySmallPadding"
            android:gravity="top|center"
            android:text="34\u2103"
            android:textColor="@color/rowLayout"
            android:textSize="@dimen/smallText" />

    </LinearLayout>
</LinearLayout>